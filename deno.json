{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno check src/**/*.ts src/**/*.tsx tests/**/*.ts",
    "dev": "deno run --allow-all npm:vite",
    "build": "deno run --allow-all npm:vite build",
    "lint": "deno run --allow-all npm:eslint .",
    "preview": "deno run --allow-all npm:vite preview"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["eqeqeq", "no-unused-vars", "no-empty", "no-extra-semi"]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@monaco-editor/react": "npm:@monaco-editor/react@^4.8.0-rc.2",
    "@types/js-yaml": "npm:@types/js-yaml@^4.0.9",
    "@viz-js/viz": "npm:@viz-js/viz@^3.20.0",
    "antd": "npm:antd@^5.27.5",
    "js-yaml": "npm:js-yaml@^4.1.0",
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "react-router-dom": "npm:react-router-dom@^7.9.5",
    "zod": "npm:zod@^4.1.12",
    "@eslint/js": "npm:@eslint/js@^9.36.0",
    "@types/node": "npm:@types/node@^24.6.0",
    "@types/react": "npm:@types/react@^19.1.16",
    "@types/react-dom": "npm:@types/react-dom@^19.1.9",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.0.4",
    "eslint": "npm:eslint@^9.36.0",
    "eslint-plugin-react-hooks": "npm:eslint-plugin-react-hooks@^5.2.0",
    "eslint-plugin-react-refresh": "npm:eslint-plugin-react-refresh@^0.4.22",
    "globals": "npm:globals@^16.4.0",
    "typescript": "npm:typescript@~5.9.3",
    "typescript-eslint": "npm:typescript-eslint@^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
